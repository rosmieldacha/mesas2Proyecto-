<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITANDO UN REGISTRO DEL ACCESORIO</h3>
                </div>
                <div class="card-body">
                    <form action="/edit2/{{accesorio.id}}" method="post">
                    <div class="input-group mt-2">
                        <label for="nombre" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="nombre" id="nombre" value="{{accesorio.nombre}}" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="codigo" class="input-group-text">Codigo</label>
                        <input class="form-control" type="num" name="codigo" id="codigo" value="{{accesorio.codigo}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="marca" class="input-group-text">Marca</label>
                        <input class="form-control" type="varchar" name="marca" id="marca" value="{{accesorio.marca}}" required> 
                    </div>
                    <div class="input-group mt-2">
                        <label for="detalle" class="input-group-text">Detalle</label>
                        <input class="form-control" type="varchar" name="detalle" id="detalle" value="{{accesorio.detalle}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="precio" class="input-group-text">Precio</label>
                        <input class="form-control" type="num" name="precio" id="precio" value="{{accesorio.precio}}" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success"> Actualizar</button>
                    </div>
                    
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>