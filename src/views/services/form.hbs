<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

    
        #inicio-btn img {
            max-height: 30px; /* Ajusta la altura máxima según tus necesidades */
            margin-right: 10px; /* Espacio entre el logo y el texto (ajusta según sea necesario) */
        }

        #inicio-btn {
            background-color: #333;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            float: left;
            cursor: pointer;
        }

        #inicio-btn:hover {
            background-color: #ddd;
            color: black;
        }


        .container {
            text-align: center;
            margin-top: 80px;
        }

        form {
            max-width: 300px;
            margin: 0 auto;
        }

        .input {
            height: 100%;
            width: 100%;
            display: block;
            background: #f3f3f3;
            padding: 20px;
            border: none;
            font-size: 16px;
            margin-bottom: 10px;
        }

        .textarea {
            resize: none;
            height: 200px;
            width: 100%;
            margin-bottom: 10px;
        }

        .button {
            height: 40px;
            width: 100%;
            display: block;
            color: rgb(255, 255, 255);
            background-color: black;
            font-size: 16px;
            text-decoration: underline;
            border: none;
            margin-bottom: 10px;
            cursor: pointer;
            transition: all ease 0.5s;
        }

        .button:hover {
            background: #f3f3f3;
            color: black;
        }
    </style>
</head>
<body>

<div id="inicio-btn">
    <a href="/index">
        <img src="/img/inicio.png" alt="Logo">
    </a>
</div>

<div class="container">
    <form   action="https://formspree.io/f/xeqbyzlz"
 method="POST" onsubmit="handleSubmit(event)">
        <input class="input" placeholder="Nombre" type="text" id="names" name="names">
        <input class="input" placeholder="Correo Electrónico" type="email" id="email" name="email">
        <textarea class="textarea" placeholder="Escribe tu mensaje aquí" name="message" id="message"></textarea>
        <button class="button">Enviar</button>
    </form>
</div>

<script>
    function handleSubmit(event) {
        event.preventDefault();

        fetch(event.target.action, {
            method: 'POST',
            body: new FormData(event.target),
            headers: {
                'Accept': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            alert('Formulario enviado');
            event.target.reset();
        })
        .catch(error => {
            alert('Error al enviar el formulario');
        });
    }
</script>

</body>
</html>
