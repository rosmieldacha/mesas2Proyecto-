
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Crear nuevo Clientes</h3>
                </div>
                <div class="card-body">
                    <form action="/add1" method="post">
                    <div class="input-group mt-2">
                        <label for="nombre" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Ejemplo: Maria" 
                        autofocus required>
                    </div>
                     <div class="input-group mt-2">
                        <label for="apellido" class="input-group-text">Apellido</label>
                        <input class="form-control" type="text" name="apellido" id="apellido" placeholder="Ejemplo: Renteria" required>
                    </div>
                     <div class="input-group mt-2">
                        <label for="edad" class="input-group-text">Edad</label>
                        <input class="form-control" type="number" name="edad" id="edad" required>
                    </div>
                     <div class="input-group mt-2">
                        <label for="correo_electronico" class="input-group-text">Correo Electrónico</label>
                        <input class="form-control" type="text" name="correo_electronico" id="correo_electronico" placeholder="Ejemplo: maria@example.com" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Crear</button>
                        <a href="/index" class="btn btn-secondary" id="cancelButton">Cancelar</a>
                    </div>
                  </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const cancelButton = document.getElementById("cancelButton");
    // Agregar un evento de clic al botón "Cancelar"
    cancelButton.addEventListener("click", function (event) {
        // Mostrar un mensaje de confirmación
    const confirmCancel = window.confirm("¿Realmente desea cancelar?");
        // Si el usuario hace clic en "Aceptar" en el mensaje de confirmación, se redirigirá a la página de inicio
    if (!confirmCancel) {
        event.preventDefault(); // Evitar la redirección predeterminada
     }
    });
</script>