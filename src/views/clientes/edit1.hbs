<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITANDO UN CLIENTE</h3>
                </div>
                <div class="card-body">
                    <form action="/edit1/{{clientes.id}}" method="post">
                    <div class="input-group mt-2">
                        <label for="nombre" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="nombre" id="nombre" value="{{clientes.nombre}}" placeholder="Ejemplo: Maria" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="apellido" class="input-group-text">Apellido</label>
                        <input class="form-control" type="text" name="apellido" id="apellido" placeholder="Ejemplo: Fernandez" value="{{clientes.apellido}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="edad" class="input-group-text">Edad</label>
                        <input class="form-control" type="number" name="edad" id="edad" value="{{clientes.edad}}" placeholder="0" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="correo_electronico" class="input-group-text">Correo Electronico</label>
                        <input class="form-control" type="text" name="correo_electronico" id="correo_electronico" value="{{clientes.correo_electronico}}" placeholder="0" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success"> Actualizar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>