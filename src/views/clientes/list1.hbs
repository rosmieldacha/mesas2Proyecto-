
<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">LISTA DE CLIENTES</h3>
        {{#if clientes}}
        <div class="col-md-3">
            <table class="table text-center" style="width: 1300px;">
                <thead>
                    <tr class="table-dark">
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Edad</th>
                        <th>Correo Electronico</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                          {{#each clientes}}
                          <tr>
                            <td>{{nombre}}</td>
                            <td>{{apellido}}</td>
                            <td>{{edad}}</td>
                            <td>{{correo_electronico}}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/edit1/{{id}}" class="btn btn-primary p-2" >
                                        <i class="fa-solid fa-pencil"></i>
                                        </a>
                                    <a href="/delete1/{{id}}" class="btn btn-danger p-2">
                                        <i class="fa-solid fa-trash"></i>
                                        </a>
                                </div>
                            </td>
                          </tr>
                          {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="5">Registro de Clientes</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card header">
                    <h3>Crear un nuevo Cliente</h3>
                </div>
                <div class="card body">
                    <p>Presiona este boton para que puedas registrar a un cliente en el sistema</p>
                    <a href="#" class="btn btn-primary">Ir a crear</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>